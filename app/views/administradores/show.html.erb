<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to administradores_path, class: 'inline-flex items-center gap-2 px-4 py-2 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors' do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Voltar
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @administrador.nome %></h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Detalhes do administrador</p>
      </div>
    </div>
    <%= link_to edit_administrador_path(@administrador), class: 'inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-sm' do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
      Editar
    <% end %>
  </div>

  <!-- Informações do Administrador -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Card: Informações Básicas -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Informações Básicas
      </h2>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nome</dt>
          <dd class="mt-1 text-sm font-medium text-gray-900 dark:text-white"><%= @administrador.nome %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white">
            <a href="mailto:<%= @administrador.email %>" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
              <%= @administrador.email %>
            </a>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Tipo de Acesso</dt>
          <dd class="mt-1">
            <% if @administrador.is_admin? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
                ADMINISTRADOR
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                USUÁRIO
              </span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Card: Grupos de Acesso -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Grupos de Acesso
      </h2>
      <% if @administrador.administrador_grupo_acessos.any? %>
        <div class="space-y-2">
          <% @administrador.administrador_grupo_acessos.each do |aga| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900/50 rounded-lg">
              <span class="text-sm font-medium text-gray-900 dark:text-white">
                <%= aga.grupo_acesso.nome %>
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 dark:text-gray-400">Nenhum grupo de acesso atribuído</p>
      <% end %>
    </div>
  </div>
</div>
