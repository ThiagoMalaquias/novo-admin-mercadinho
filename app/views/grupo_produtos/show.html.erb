<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to grupo_produtos_path, class: 'inline-flex items-center gap-2 px-4 py-2 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors' do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Voltar
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @grupo_produto.nome %></h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Detalhes do grupo de produtos</p>
      </div>
    </div>
    <%= link_to edit_grupo_produto_path(@grupo_produto), class: 'inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-sm' do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
      Editar
    <% end %>
  </div>

  <!-- Informações do Grupo -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Card: Informações Básicas -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Informações Básicas
      </h2>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nome</dt>
          <dd class="mt-1 text-sm font-medium text-gray-900 dark:text-white"><%= @grupo_produto.nome %></dd>
        </div>
        <% if @grupo_produto.status.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Status</dt>
            <dd class="mt-1">
              <% if @grupo_produto.status == "ATIVO" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                  ATIVO
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                  INATIVO
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total de Produtos</dt>
          <dd class="mt-1">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
              <%= @grupo_produto.produtos.count %> produtos
            </span>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Card: Configurações -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Configurações
      </h2>
      <dl class="space-y-4">
        <% if @grupo_produto.grupo_consumacao.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Grupo de Consumação</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-white"><%= @grupo_produto.grupo_consumacao %></dd>
          </div>
        <% end %>
        <% if @grupo_produto.fracionado.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Fracionado</dt>
            <dd class="mt-1">
              <% if @grupo_produto.fracionado == "SIM" || @grupo_produto.fracionado == "sim" || @grupo_produto.fracionado == "Sim" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                  SIM
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200">
                  NÃO
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Criação</dt>
          <dd class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= @grupo_produto.created_at.strftime("%d/%m/%Y às %H:%M") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Lista de Produtos (se houver) -->
  <% if @grupo_produto.produtos.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Produtos neste Grupo (<%= @grupo_produto.produtos.count %>)
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @grupo_produto.produtos.limit(12).each do |produto| %>
          <div class="p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
            <%= link_to produto_path(produto), class: 'block' do %>
              <p class="text-sm font-medium text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                <%= produto.descricao_cupom %>
              </p>
              <% if produto.preco.present? %>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><%= produto.preco %></p>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <% if @grupo_produto.produtos.count > 12 %>
        <div class="mt-4 text-center">
          <p class="text-sm text-gray-500 dark:text-gray-400">
            E mais <%= @grupo_produto.produtos.count - 12 %> produto(s)...
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
