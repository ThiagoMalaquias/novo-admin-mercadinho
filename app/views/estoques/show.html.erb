<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to estoques_path, class: 'inline-flex items-center gap-2 px-4 py-2 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors' do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Voltar
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Detalhes do Estoque</h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Informações da movimentação</p>
      </div>
    </div>
    <%= link_to edit_estoque_path(@estoque), class: 'inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-sm' do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
      Editar
    <% end %>
  </div>

  <!-- Informações Principais -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Card: Informações Básicas -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Informações Básicas
      </h2>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Filial</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white"><%= @estoque.filial.nome_fantasia %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Produto</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white"><%= @estoque.produto.descricao_cupom %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Ação</dt>
          <dd class="mt-1">
            <% if @estoque.acao == "entrada" %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                ENTRADA
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                SAÍDA
              </span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Lançamento</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white">
            <%= @estoque.lancamento.strftime("%d/%m/%Y") rescue "-" %>
          </dd>
        </div>
        <% if @estoque.validade.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Validade</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-white">
              <%= @estoque.validade.strftime("%d/%m/%Y") %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>

    <!-- Card: Valores e Quantidades -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Valores e Quantidades
      </h2>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Quantidade</dt>
          <dd class="mt-1 text-2xl font-bold text-gray-900 dark:text-white"><%= @estoque.quantidade %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Valor Unitário</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900 dark:text-white"><%= @estoque.valor_unitario %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Valor Total</dt>
          <dd class="mt-1 text-2xl font-bold text-emerald-600 dark:text-emerald-400"><%= @estoque.valor_total %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>
