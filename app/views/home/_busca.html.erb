<%= form_with(url: path, method: :get, local: true, html: { class: "bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6" }) do %>
  <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
    <div class="md:col-span-4">
      <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
        Per√≠odo
      </label>
      <div class="grid grid-cols-2 gap-2">
        <%= date_field_tag :data_inicio, params[:data_inicio], class: 'px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm', id: 'data_inicio', required: true %>
        <%= date_field_tag :data_fim, params[:data_fim], class: 'px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm', id: 'data_fim', required: true %>
      </div>
    </div>
    <div class="md:col-span-6">
      <%= label_tag :filial_id, "Filial", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= select_tag :filial_id, options_for_select(Filial.all.collect { |filial| [filial.nome_fantasia, filial.id] }, selected: params[:filial_id]), include_blank: "Todas as Filiais", class: 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm' %>
    </div>
    <div class="md:col-span-2">
      <%= submit_tag "Filtrar", class: "w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-sm" %>
    </div>
  </div>
<% end %>