<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to grupo_acessos_path, class: 'inline-flex items-center gap-2 px-4 py-2 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors' do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Voltar
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @grupo_acesso.nome %></h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Detalhes do grupo de acessos</p>
      </div>
    </div>
    <%= link_to edit_grupo_acesso_path(@grupo_acesso), class: 'inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-sm' do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
      Editar
    <% end %>
  </div>

  <!-- Informações do Grupo -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Card: Informações Básicas -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Informações Básicas
      </h2>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nome</dt>
          <dd class="mt-1 text-sm font-medium text-gray-900 dark:text-white"><%= @grupo_acesso.nome %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total de Acessos</dt>
          <dd class="mt-1">
            <% acessos_count = @grupo_acesso.acessos_actions.count %>
            <% if acessos_count > 0 %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                <%= acessos_count %> acesso<%= 's' if acessos_count != 1 %>
              </span>
            <% else %>
              <span class="text-sm text-gray-500 dark:text-gray-400">Nenhum acesso configurado</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total de Administradores</dt>
          <dd class="mt-1">
            <% admins_count = @grupo_acesso.administrador_grupo_acessos.count %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
              <%= admins_count %> administrador<%= 'es' if admins_count != 1 %>
            </span>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Card: Administradores -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Administradores
      </h2>
      <% if @grupo_acesso.administrador_grupo_acessos.any? %>
        <div class="space-y-2">
          <% @grupo_acesso.administrador_grupo_acessos.each do |aga| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900/50 rounded-lg">
              <span class="text-sm font-medium text-gray-900 dark:text-white">
                <%= aga.administrador.nome %>
              </span>
              <%= link_to administrador_path(aga.administrador), class: 'text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300' do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 dark:text-gray-400">Nenhum administrador atribuído a este grupo</p>
      <% end %>
    </div>
  </div>

  <!-- Acessos -->
  <% if @grupo_acesso.acessos_actions.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
        Permissões e Acessos (<%= @grupo_acesso.acessos_actions.count %>)
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
        <% @grupo_acesso.acessos_actions.uniq.each do |acesso| %>
          <div class="flex items-center gap-2 p-2 bg-green-50 dark:bg-green-900/20 rounded-lg">
            <svg class="w-4 h-4 text-green-600 dark:text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-sm text-gray-900 dark:text-white"><%= acesso %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
