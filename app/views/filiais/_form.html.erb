<%= form_for(@filial, html: { class: "space-y-8", role: "form" }) do |f| %>
  <% if @filial.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4" role="alert">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">Confira os erros abaixo:</h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-300 list-disc list-inside">
            <% @filial.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Informações Básicas -->
  <div>
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
      Informações Básicas
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :nome_fantasia, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :nome_fantasia, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>
      <div>
        <%= f.label :razao_social, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :razao_social, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :cpf_cnpj, "CPF/CNPJ", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :cpf_cnpj, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent", id: "filial_cpf_cnpj" %>
      </div>
      <div>
        <%= f.label :tipo_negocio, "Tipo de Negócio", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :tipo_negocio, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div class="md:col-span-2">
        <%= f.label :detalhes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_area :detalhes, rows: 3, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
    </div>
  </div>

  <!-- Contato -->
  <div>
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
      Contato
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :responsavel, "Responsável", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :responsavel, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :contato, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :contato, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :telefone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :telefone, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent", id: "filial_telefone" %>
      </div>
      <div>
        <%= f.label :celular, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :celular, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent", id: "filial_celular" %>
      </div>
    </div>
  </div>

  <!-- Endereço -->
  <div>
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
      Endereço
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div>
        <%= f.label :cep, "CEP", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :cep, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent", id: "filial_cep" %>
      </div>
      <div class="md:col-span-2">
        <%= f.label :endereco, "Endereço", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :endereco, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :numero, "Número", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :numero, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :bairro, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :bairro, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :cidade, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :cidade, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :estado, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :estado, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent", maxlength: 2, placeholder: "UF" %>
      </div>
      <div>
        <%= f.label :codigo_ibge, "Código IBGE", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :codigo_ibge, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
    </div>
  </div>

  <!-- Informações Fiscais -->
  <div>
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
      Informações Fiscais
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <%= f.label :codigo_regime_tributario, "Código Regime Tributário", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :codigo_regime_tributario, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :inscricao_estadual, "Inscrição Estadual", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :inscricao_estadual, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :inscricao_municipal, "Inscrição Municipal", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= f.text_field :inscricao_municipal, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
    </div>
  </div>

  <!-- Observações -->
  <div>
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
      Observações
    </h2>
    <div>
      <%= f.label :observacoes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= f.text_area :observacoes, rows: 4, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
  </div>

  <!-- Botão Submit -->
  <div class="flex justify-end gap-4 pt-4 border-t border-gray-200 dark:border-gray-700">
    <%= link_to filiais_path, class: 'px-6 py-2 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors font-medium' do %>
      Cancelar
    <% end %>
    <%= f.submit "Salvar", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-sm" %>
  </div>
<% end %>

<script>
  // Máscaras de entrada
  function mascaraTelefone(input) {
    let value = input.value.replace(/\D/g, '');
    if (value.length <= 10) {
      value = value.replace(/(\d{2})(\d{4})(\d{0,4})/, '($1) $2-$3');
    } else {
      value = value.replace(/(\d{2})(\d{5})(\d{0,4})/, '($1) $2-$3');
    }
    input.value = value;
  }

  function mascaraCEP(input) {
    let value = input.value.replace(/\D/g, '');
    value = value.replace(/(\d{5})(\d{0,3})/, '$1-$2');
    input.value = value;
  }

  function mascaraCPFCNPJ(input) {
    let value = input.value.replace(/\D/g, '');
    if (value.length <= 11) {
      // CPF: 000.000.000-00
      value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{0,2})/, '$1.$2.$3-$4');
    } else {
      // CNPJ: 00.000.000/0000-00
      value = value.replace(/(\d{2})(\d{3})(\d{3})(\d{4})(\d{0,2})/, '$1.$2.$3/$4-$5');
    }
    input.value = value;
  }

  document.addEventListener('DOMContentLoaded', function() {
    const telefoneInput = document.getElementById('filial_telefone');
    const celularInput = document.getElementById('filial_celular');
    const cepInput = document.getElementById('filial_cep');
    const cpfCnpjInput = document.getElementById('filial_cpf_cnpj');

    if (telefoneInput) {
      telefoneInput.addEventListener('input', function() {
        mascaraTelefone(this);
      });
    }

    if (celularInput) {
      celularInput.addEventListener('input', function() {
        mascaraTelefone(this);
      });
    }

    if (cepInput) {
      cepInput.addEventListener('input', function() {
        mascaraCEP(this);
      });
      cepInput.setAttribute('maxlength', '9');
    }

    if (cpfCnpjInput) {
      cpfCnpjInput.addEventListener('input', function() {
        mascaraCPFCNPJ(this);
      });
      cpfCnpjInput.setAttribute('maxlength', '18');
    }
  });
</script>
